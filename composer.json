{
    "name": "deplink/deplink",
    "description": "Dependency Manager for C/C++",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Wojciech Mleczek",
            "email": "mleczek.wojtek@gmail.com"
        }
    ],
    "scripts": {
        "test": "behat --no-interaction",
        "build": "@composer install --no-dev && php bin/build.php"
    },
    "autoload": {
        "psr-4": {
            "Deplink\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Deplink\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^5.6 || ^7.0",
        "php-di/php-di": "^5.4",
        "symfony/console": "^3.3"
    },
    "require-dev": {
        "behat/behat": "^3.3",
        "phpunit/phpunit": "^5.7"
    }
}
